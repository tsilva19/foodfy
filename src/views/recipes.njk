{% extends "layout.njk" %}

{% block title %}
    <title>Foodfy - Receitas</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="/styles/recipes.css">
{% endblock styles %}

{% block content %}
    <div class="cards">
                    {% for item in items %}

                    <div class="card" id="{{ item.id }}">
                         <div class="card-image">
                            <img src="{{ item.image }}" alt="{{item.title}}">
                         </div>
                                       
                        <div class="card__content">
                            <h2>{{ item.title }}</h2>
                        </div>

                        <div class="card__autor">
                            <h3>por {{ item.author }}</h3>
                        </div>

                    </div>
                    {%endfor %}
                </div>
 
{% endblock content %}

{% block script %}
    <script src="/scripts/scripts.js"></script>
{% endblock script %}